<div style="margin: 24px;">
  <h1>Welcome to the longest word-game!</h1>
  <div class="game-board">
    <% @letters.each do |letter| %>
      <div class="letter"><%= letter %></div>
    <% end %>
  </div>
  <p>What is the longest word you can find? </p>
  <form action="/score" method="POST">
    <input type="text" id="word-input" name="word" placeholder="Enter you word">
    <input type="submit" value="Play" id="button-play">
    <!-- <input id="grid" name="grid" type="hidden" value="<%= @letters %>"> -->
    <%= hidden_field_tag :grid, @letters %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </form>
</div>
